################################################################################
# Sesame configuration for SPLENDID Federation.
#
# ATTENTION: the Sail implementing the sail:sailType must be published
#            in META-INF/services/org.openrdf.sail.SailFactory
################################################################################
@prefix void: <http://rdfs.org/ns/void#>.
@prefix rep:  <http://www.openrdf.org/config/repository#>.
@prefix sr:   <http://www.openrdf.org/config/repository/sail#>.
@prefix sail: <http://www.openrdf.org/config/sail#>.
@prefix fed:  <http://west.uni-koblenz.de/config/federation/sail#>.

[] a rep:Repository ;
   rep:repositoryTitle "SPLENDID Federation" ;
   rep:repositoryID "SPLENDID" ;
   rep:repositoryImpl [
      rep:repositoryType "openrdf:SailRepository" ;
      sr:sailImpl [
         sail:sailType "west:FederationSail" ;

         # sparql endpoints
         fed:member [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/ChEBI/chebi_void.n3> ;
            void:sparqlEndpoint <HOST1:3030/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/KEGG/kegg_void.n3> ;
            void:sparqlEndpoint <HOST2:3031/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/Drugbank/drugbank_void.n3> ;
             void:sparqlEndpoint <HOST3:3032/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/Geonames/geonames_void.n3> ;
            void:sparqlEndpoint <HOST4:3033/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/DBpedia/dbpedia_void.n3> ;
            void:sparqlEndpoint <HOST5:3034/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/Jamendo/jamendo_void.n3> ;
            void:sparqlEndpoint <HOST6:3035/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/NYTimes/nytimes_void.n3> ;
            void:sparqlEndpoint <HOST7:3036/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/SWDF/swdf_void.n3> ;
            void:sparqlEndpoint <HOST8:3037/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <fedBenchDataPath/LMDB/lmdb_void.n3> ;
            void:sparqlEndpoint <HOST9:3038/sparql>
         ]
      ]
   ] .
